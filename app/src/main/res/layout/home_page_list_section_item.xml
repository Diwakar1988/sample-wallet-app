<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:noon="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />

        <variable
            name="sectionVM"
            type="com.github.diwakar1988.noon.home.ListSectionVM" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            tools:text="Add Money"
            android:text="@{sectionVM.title}"
            android:textColor="@color/title"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_description"
            tools:text="Add Money"
            android:text="@{sectionVM.description}"
            android:textColor="@color/description"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/actions_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            noon:adapter="@{sectionVM.sectionActionsAdapter}"/>
    </LinearLayout>
</layout>